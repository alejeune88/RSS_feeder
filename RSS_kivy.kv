#:kivy 1.0
#:import Button kivy.uix.button.Button

# creating button feature
<Button>:
    font_size: 40
      
    # creating button
    # a button 30 % of the width and 50 %
    # of the height of the layout 
    size_hint: 0.3, 0.3


<MainScreen>:
    FloatLayout:
        Button:
            text: 'Article Review'
            pos_hint: {"x":0.05, "y":0.6}
            on_press: 
                root.manager.transition.direction = 'up'
                root.manager.current = 'article_screen'
        Button:
            text: 'RSS Subscribe'
            pos_hint: {"x":0.35, "y":0.6}
            on_press: 
                root.manager.transition.direction = 'up'
                root.manager.current = 'rss_sub_screen'
        Button:
            text: 'Filters'
            pos_hint: {"x":0.65, "y":0.6}
            on_press: 
                root.manager.transition.direction = 'up'
                root.manager.current = 'filters_screen'
        Button:
            pos_hint: {"x":0.35, "y":0.1}
            text:'Save and exit'
            

<ArticleScreen>:
    id: article_screen
    FloatLayout:
        Button:
            text: 'Back to menu'
            size_hint: 0.3, 0.1
            pos_hint: {"x":0.0, "bottom":0.0}
            on_press: root.manager.current = 'main_screen'
        Button:
            text: 'Article Review'
            size_hint: 0.3, 0.1
            pos_hint: {"x":0.025, "top":1}
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = 'article_screen'
        Button:
            text: 'RSS Subscribe'
            size_hint: 0.3, 0.1
            pos_hint: {"x":0.35, "top":1}
